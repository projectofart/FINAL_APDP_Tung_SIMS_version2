@{
	// Mục đích để kiểm tra xem trang hiện tại là trang nào để active menu (nó sẽ hiện màu sáng vào nơi mình click vào Sidebar)
	string NameConroller = this.ViewContext.RouteData.Values["Controller"].ToString();
	string ActiveDashboard = NameConroller == "Dashboard" ? "active" : "";
	string ActiveCourses = NameConroller == "Courses" ? "active" : "";
	string ActiveTeacher = NameConroller == "Teacher" ? "active" : "";
	string ActiveStudent = NameConroller == "Student" ? "active" : "";
	string ActiveClassRoom = NameConroller == "ClassRoom" ? "active" : "";
	string ActiveCategory = NameConroller == "Category" ? "active" : "";

}
<nav id="sidebar" class="sidebar js-sidebar">
	<div class="sidebar-content js-simplebar">
