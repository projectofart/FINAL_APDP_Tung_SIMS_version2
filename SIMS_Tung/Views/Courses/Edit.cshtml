@model ASM_SIMS.Models.CourseDetail
@{
    ViewData["title"] = "Edit Course";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12 col-md-12">
        <h2>Edit Course</h2>
        <a class="btn btn-info" href="@Url.Action("Index", "Courses")">Back to Courses</a>
        <div class="card mt-3">
            <div class="card-body">
                <h5 class="card-title">Edit Course</h5>
                <form method="post" enctype="multipart/form-data" asp-controller="Courses" asp-action="Edit">
                    <input asp-for="Id" type="hidden" />
                    <div class="mb-3">
                        <label asp-for="NameCourse">Course Name</label>
                        <input asp-for="NameCourse" class="form-control" type="text" />
                        <span asp-validation-for="NameCourse" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="8"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoryId">Category</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "NameCategory"))">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="StartDate">Start Date</label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EndDate">End Date</label>
                        <input asp-for="EndDate" class="form-control" type="date" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AvatarCourse">Avatar</label>
                        <input asp-for="AvatarCourse" class="form-control" type="file" name="ViewAvatar" />
                        <span asp-validation-for="AvatarCourse" class="text-danger"></span>
                        @if (!string.IsNullOrEmpty(Model.AvatarCourse))
                        {
                            <img src="~/SIMS/uploads/images/@Model.AvatarCourse" alt="@Model.NameCourse" width="100" height="150" class="mt-2" />
                        }
                    </div>

                    <div class="mb-3">
                        <label asp-for="Vote">Vote (0-5)</label>
                        <input asp-for="Vote" class="form-control" type="number" min="0" max="5" />
                        <span asp-validation-for="Vote" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="Status" class="form-check-input" type="checkbox" />
                        <label asp-for="Status" class="form-check-label">Active</label>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>